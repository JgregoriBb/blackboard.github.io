<h4 id="memberships">Memberships</h4>

<p><strong>Create</strong></p>
<div class="highlighter-rouge"><div class="highlight"><pre class="highlight"><code>    payload = "{ \"userId\" : \"" + $user_id + "\", \"courseId\" : \"" + $course_id + "\", \"courseRoleId\" : \"Student\", \"dataSourceId\" : \"" + $dsk_id + "\", \"availability\" : { \"available\" : \"Yes\" } }"
      
          RestClient.put($COURSE_PATH + $course_id + '/users/' + $user_id, payload, :content_type =&gt; :json, :accept =&gt; :json, :Authorization =&gt; $auth){ |response, request, result, &amp;block|
          case response.code
            when 201
              p "It worked !"
              membership = JSON.parse(response)
              $created = membership['created']
              p 'Create Membership: ' + $created
            else
              p response.to_s
              response.return!(request, result, &amp;block)
            end
          }
</code></pre></div></div>

<p><strong>Read</strong></p>
<div class="highlighter-rouge"><div class="highlight"><pre class="highlight"><code>    RestClient.get($COURSE_PATH + $course_id + '/users/' + $user_id, :content_type =&gt; :json, :accept =&gt; :json, :Authorization =&gt; $auth){ |response, request, result, &amp;block|
              case response.code
                when 200
                  p "Got Membership !" + response.to_s
