<div class="highlighter-rouge"><div class="highlight"><pre class="highlight"><code>    payload = "{ \"externalId\":\"BBDN-TERM-RUBY\", \"dataSourceId\":\"" + $dsk_id + "\", \"name\" : \"REST Demo Term - Ruby\", \"description\": \"Term Used For REST Demo - Ruby\", \"availability\" : { \"available\" : \"Yes\" } }"
    RestClient.post($TERM_PATH, payload, :content_type =&gt; :json, :accept =&gt; :json, :Authorization =&gt; $auth){ |response, request, result, &amp;block|
         case response.code
               when 201
                      p "It worked !"
